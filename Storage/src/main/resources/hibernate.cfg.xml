<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQL5Dialect
		</property>
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<property name="hibernate.current_session_context_class">thread</property>
		
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<!-- Assume test is the database name -->
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost/brains
		</property>
		<property name="hibernate.connection.username">
			root
		</property>
		<property name="hibernate.connection.password">
			root
		</property>

		<mapping class="model.teaser.SudokuTeaser" />
		<mapping class="model.teaser.SudokuTeaserCondition" />
		<mapping class="model.teaser.TeaserInfo" />
		<mapping class="model.teaser.TeaserSolvingInfo" />
		<mapping class="model.user.SudokuUserSolvingInfo" />
		<mapping class="model.user.User" />
		<mapping class="model.user.UserInfo" />
		<mapping class="model.user.UserSolvingInfo" />

	</session-factory>
</hibernate-configuration>